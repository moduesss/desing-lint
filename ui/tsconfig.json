{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./env.d.ts"],
  "exclude": ["../src"]            // важно: не тянуть воркер в UI-конфиг
}
