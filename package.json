{
  "name": "design-lint",
  "version": "1.0.2",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare:ui": "vite build --config vite.config.ts --mode production && node scripts/make-inline-ui.mjs",
    "prepare:code": "node esbuild.config.mjs",
    "dev": "rimraf dist && npm run prepare:ui && npm run prepare:code && npm-run-all -p dev:ui dev:code",
    "dev:ui": "vite build --config vite.config.ts --watch --mode production",
    "dev:code": "node esbuild.config.mjs --watch",
    "build": "rimraf dist && vite build --config vite.config.ts --mode production && node scripts/make-inline-ui.mjs && node esbuild.config.mjs",
    "typecheck": "tsc --noEmit",
    "check:rules": "node scripts/check-rules.mjs",
    "check:rulecopy": "node scripts/check-rule-copy.mjs",
    "sanity:engine": "node scripts/sanity-engine.mjs"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.119.0",
    "@types/node": "^24.9.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "sass-embedded": "^1.93.3",
    "tailwindcss": "^3.4.18",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
